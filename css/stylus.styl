    border: 0px

.card, .card-body
    & h2, p
        color: black
.card
    width: 90%
    margin: auto
    display: block

.cta
    background: maincolor
    margin: 0
    padding: 0
    position: fixed
    right 20px
    top 10px
    & a, p
        text-align: right
        color white
        font-size: 0.8em

#description
    font-size: 0.8em
    color grey

.dualBtn
    bottom: 20px
    display: inline-block
    right 50px
    margin-left: auto
    margin-right: auto
    position: fixed
    text-align: center
    text-decoration: none
    width: 200px
    & a
        color white
       & a:hover
            color mainBlue
    & .main
        padding: 5px
        border-radius: 0 50px 50px 0
        background: maincolor
    & .grey
        padding: 5px
        border-radius: 50px 0 0 50px
        background: darkGrey

